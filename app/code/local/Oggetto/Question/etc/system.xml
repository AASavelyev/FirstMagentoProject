<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <oggetto translate="label" module="oggetto_question">
            <label>Oggetto Extensions</label>
            <sort_order>100</sort_order>
        </oggetto>
    </tabs>
    <sections>
        <oggetto translate="label" module="oggetto_question">
            <label>Extension Options</label>
            <tab>oggetto</tab>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <question translate="label" module="oggetto_question">
                    <label>Question Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Allow/deny new questions</label>
                            <comment>Source model provider Magento's default Yes/No values</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enabled>
                    </fields>
                </question>
            </groups>
        </oggetto>
    </sections>
</config>