<config>
    <modules>
        <Oggetto_Question>
            <version>0.2.0</version>
        </Oggetto_Question>
    </modules>
    <frontend>
        <translate>
            <modules>
                <oggetto_question>
                    <files>
                        <default>Oggetto_Question.csv</default>
                    </files>
                </oggetto_question>
            </modules>
        </translate>
        <routers>
            <question>
                <use>standard</use>
                <args>
                    <module>Oggetto_Question</module>
                    <frontName>question</frontName>
                </args>
            </question>
        </routers>
        <layout>
            <updates>
                <oggetto_question>
                    <file>oggetto/question.xml</file>
                </oggetto_question>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <oggetto_question>
                <class>Oggetto_Question_Model</class>
                <resourceModel>question_resource</resourceModel>
            </oggetto_question>
            <question_resource>
                <class>Oggetto_Question_Model_Resource</class>
                <entities>
                    <questions>
                        <table>questions</table>
                    </questions>
                </entities>
            </question_resource>
        </models>
        <helpers>
            <oggetto_question>
                <class>Oggetto_Question_Helper</class>
            </oggetto_question>
        </helpers>
        <blocks>
            <oggetto_question>
                <class>Oggetto_Question_Block</class>
            </oggetto_question>
        </blocks>
        <resources>
            <question_setup>
                <setup>
                    <module>Oggetto_Question</module>
                </setup>
            </question_setup>
        </resources>
        <template>
            <email>
                <custom_email_template module="oggetto_question">
                    <label>Template oggetto email</label>
                    <file>notice_user_about_answer.html</file>
                    <type>html</type>
                </custom_email_template>
                <custom_email_admin_template module="oggetto_question">
                    <label>Template oggetto admin email</label>
                    <file>notice_admin_about_question.html</file>
                    <type>html</type>
                </custom_email_admin_template>
            </email>
        </template>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <oggetto_question>
                    <file>oggetto/question.xml</file>
                </oggetto_question>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <oggetto_question before="Mage_Adminhtml">Oggetto_Question_Adminhtml</oggetto_question>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <phpunit>
        <suite>
            <modules>
                <Oggetto_Question />
            </modules>
        </suite>
    </phpunit>
</config>